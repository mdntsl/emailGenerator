<!DOCTYPE html>
<html lang="en">
<head>
    <title>Email Generator</title>
    <meta charset="UTF-8">
</head>
<body>
<form action="/email/" method="Get">
    <input type="submit" value="Return"> <br><br>
</form><br><br>

<h1>Saved Emails</h1>

<ul>
    <% savedEmails.forEach( element => { %>
        <form action="/email/delete" method="POST">
            <li> <%= element.email %> </li>
            <%= element.date %>
            <input type="hidden" value="<%= element.email %>" name ="email">
            <input type="submit" value="Delete"> <br><br>
        </form>
    <% }) %>
</ul>

</body>
</html>